<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FlashAsFragment">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvFlashAs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:focusableInTouchMode="false"
        android:gravity="center" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bFlashAs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/bCancel"
        android:enabled="false"
        android:text="@string/go" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/tvFlashAs"
        android:text="@string/negative" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/optAsKernel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:tag="kernel"
            android:text="@string/kernel"
            android:textSize="24sp" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/optAsRecovery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:tag="recovery"
            android:text="@string/recovery"
            android:textSize="24sp" />
    </android.support.v7.widget.LinearLayoutCompat>
</RelativeLayout>
